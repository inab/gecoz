<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath es.elixir.bsc.ngs.nova.gecoz.tools.Gecotools -v FINEST -i D:/templates/corpus/hg38.gcz -o D:/templates/corpus/chr15.seq chr15</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath es.elixir.bsc.ngs.nova.gecoz.tools.Gecotools -v FINEST -i D:/templates/corpus/hg38.gcz -o D:/templates/corpus/chr15.seq chr15</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath es.elixir.bsc.ngs.nova.gecoz.tools.Gecotools -v FINEST -i D:/templates/corpus/hg38.gcz -o D:/templates/corpus/chr15.seq chr15</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
